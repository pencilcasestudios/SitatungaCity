<!DOCTYPE html>
<html lang="en">
	<head>
		<%= display_meta_tags(default_meta_tags) %>

		<%= render "viewport" %>

		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>

		<%= render "favicons" %>

		<%= csrf_meta_tags %>

		<%= render "old_internet_explorer" %>

		<%= render "analytics" %>
	</head>
	<body id="<%= body_id %>" class="<%= yield(:body_class).present? ? yield(:body_class) : "page" %>">
		<%= render "notifications" %>

		<%= render "navigation" %>

		<div class="container">
			<%= yield %>
		</div>

		<%= render "footer" %>

		<%= javascript_include_tag "application" %>
	</body>
</html>
